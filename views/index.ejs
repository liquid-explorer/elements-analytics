<head>
  <link rel="preconnect" href="https://fonts.googleapis.com" />
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
  <link
    href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&display=swap"
    rel="stylesheet"
  />
  <style>
    body {
      background-color: rgb(0, 40, 85);
    }

    .flex-container {
      display: flex;
      justify-content: center;
      align-items: center;
      flex-direction: column;
      color: whitesmoke;
      width: 100%;
      height: 100%;
      font-family: 'Roboto', sans-serif;
    }
    .flex-item {
      width: 60%;
      color: whitesmoke;
    }
    footer {
      padding-top: 15%;
      text-align: center;
      position: center;
      bottom: 0;
      width: 100%;
      display: inline-block;
      vertical-align: top;
      font-size: 16px;
      justify-content: center;
      flex-direction: column;
    }

    a {
      color: rgb(255, 112, 166);
    }
  </style>
</head>

<div class="flex-container">
  <h1>Supply</h1>
  <div class="flex-item">
    <canvas id="myChart"></canvas>
    <footer>
      Links
      <a href="https://github.com/Ryn54" title="Ryn54">Ryn54</a>
      <a
        href="https://github.com/liquid-explorer/elements-analytics"
        title="ElementsAnalytics"
        >ElementsAnalytics</a
      >
    </footer>
  </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

<% if (supply) { %>
<script>
  const plugin = {
    id: 'customCanvasBackgroundColor',
    beforeDraw: (chart, args, options) => {
      const { ctx } = chart;
      ctx.save();
      ctx.globalCompositeOperation = 'destination-over';
      ctx.fillStyle = options.color || '#99ffff';
      ctx.fillRect(0, 0, chart.width, chart.height);
      ctx.restore();
    },
  };
  function replaceAll(str, char, replaceChar) {
    return str.split(char).join(replaceChar);
  }

  const ctx = document.getElementById('myChart');

  const supplyArg = '<%= supply %>';
  console.log(supplyArg);
  console.log(replaceAll(supplyArg, '&#34;'));
  const supply = JSON.parse(replaceAll(supplyArg, '&#34;', '"'));

  Chart.defaults.color = '#ffffff';
  new Chart(ctx, {
    type: 'line',
    data: {
      labels: supply.labels,
      datasets: [
        {
          label: 'Fuji',
          data: supply.data,
          fill: true,
          borderColor: 'rgb(255, 112, 166)',
          tension: 0.1,
        },
      ],
    },
    options: {
      plugins: {
        customCanvasBackgroundColor: {
          color: 'rgb(0,40,85)',
        },
        color: '#ffff',
        legend: {
          labels: {
            font: {
              family: 'Roboto, sans-serif',
              size: 16,
            },
          },
        },
      },
    },
    plugins: [plugin],
  });
</script>
<% } %>
